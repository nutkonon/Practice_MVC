    </tr>
    <tr>
        <td>Price: </td>
        <td><input type="text" id="Price2" class="form-control" /></td>
    </tr>
    <tr>
        <td colspan="2"><button onclick="submit()" class="form-control btn-default">Submit Form</button></td>
    </tr>
</table>

<h4 style="color:green" id="output"></h4>

<script>
    function submit(){
        var data = {
            ID: $('#ID2').val(),
            Name: $('#Name2').val(),
            Category: $('#Category2').val(),
            Price: $('#Price2').val()
        };

        $.post("/Home/FormPureHTML", { it: data }, function () { alert('Successfully Saved') });
    }
</script>

